<Page x:Class="Diplom1.Pages.Aftor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Foreground="White">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/211.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center">

            <TextBlock Text="Введите логин:" />
            <TextBox Name="Login" />
            <TextBlock Text="Введите пароль:"  />
            <TextBox Name="Password"/>
            <StackPanel  Orientation="Horizontal" >
                <Button Content="Войти" Width="180" Margin="0,10,0,0"  Click="Button_Click"/>
            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
