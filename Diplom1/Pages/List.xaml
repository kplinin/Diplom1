<Page x:Class="Diplom1.Pages.List"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/211.jpg"/>
        </Grid.Background>
        <StackPanel >
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnB" Content="Назад" Margin="15 " Click="BtnB_Click"/>
            </StackPanel>
            <StackPanel Height="278">
                <Button x:Name="BtnCl" Content="Список продаж"  Margin="300,20,300,0" Height="35" Click="BtnCl_Click"/>
                <Button x:Name="BtnO" Content="Отчет продаж" Margin="300,20,300,0" Height="35" Click="BtnO_Click"/>
                <Button Name="BtnSl" Content="Список закупок" Margin="300,20,300,0" Height="35" Click="BtnSl_Click"/>
                <Button x:Name="BtnOP" Content="Отчет Закупок" Margin="300,20,300,0" Height="35" Click="BtnOP_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
